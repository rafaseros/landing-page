---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import "../styles/global.css";
---

<Layout>
  <Header />
  <main class="bg-(--bg-primary)">
    <Hero />

    <!-- Secciones placeholder para que los links funcionen -->
    <section
      id="sobre-mi"
      class="min-h-screen bg-(--bg-secondary) flex items-center justify-center"
    >
      <p class="text-(--text-secondary)">Sección Sobre mí - Próximamente</p>
    </section>

    <section
      id="experiencia"
      class="min-h-screen bg-(--bg-primary) flex items-center justify-center"
    >
      <p class="text-(--text-secondary)">Sección Experiencia - Próximamente</p>
    </section>

    <section
      id="tecnologias"
      class="min-h-screen bg-(--bg-secondary) flex items-center justify-center"
    >
      <p class="text-(--text-secondary)">Sección Tecnologías - Próximamente</p>
    </section>

    <section
      id="contacto"
      class="min-h-screen bg-(--bg-primary) flex items-center justify-center"
    >
      <p class="text-(--text-secondary)">Sección Contacto - Próximamente</p>
    </section>
  </main>
</Layout>
